/* pages/shopcar/shopcar.wxss */
.shopcar_main{
  height: 100%;
  position: relative;
}
.shopcar_main .cells_box{
  width: 100%;
  position: absolute;
  top: 0;
  bottom: 80rpx;
  overflow-y: auto;
}
.shopcar_main .settlement_box{
  position: absolute;
  bottom: 0;
  height: 80rpx;
}
.cell{
  font-size: 32rpx;
  font-weight: 600;
}
.content{
  display: flex;
}
.img{
  width: 150rpx;
  height: 150rpx;
}
.btn_right text{
  font-weight: 600;
  margin: 0 20rpx;
}
.settlement_box{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
}
.settlement{
  display: flex;
  justify-content: space-between;
  background-color: #fff;
  z-index: 100;
}
.settlement view:nth-last-child(1){
  display: flex;
  justify-content: space-between;
}
.settlement view:nth-last-child(1) text{
  margin-right: 100rpx;
}
 
