/* pages/detail/detail.wxss */
.swiper{
  height: 300rpx;
}

.swiper_item image{
  width: 100%;
  height: 300rpx;
}

.ProductInformation{
  display: flex;
  position: sticky;
  top: 0;
  justify-content: space-around;
  background-color: #fff;
}
.ProductInformation view{
  width: 200rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}
.ProductInformation .active{
  border-bottom: 5rpx solid rgb(190, 34, 34);
}
.InfoImg{
  width: 100%;
  display: block;
}
.car_bottom{
  width: 100%;
  position:fixed;
  display: flex;
  left: 0;
  bottom: 0;
}
.car_bottom view{
  height: 100rpx;
  line-height: 100rpx;
  flex: 1;
  text-align: center;
  color: #fff;
}
.car_bottom view:nth-child(1){
  background-color: green;
  opacity: 0.8;
}
.car_bottom view:nth-child(2){
  background-color: red;
  opacity: 0.8;
}

